{
    "name": "make-hidden",
    "displayName": "Make Hidden",
    "description": "Make Hidden enhances the built-in functionality of `files.exclude` by proving an explorer view Pane interface for a quick overview of the hidden/exclude files/folders from the projects directory. Context menus options are also added to perform multiply hidden/exclude options quickly and effortlessly.",
    "version": "2.0.0",
    "publisher": "devine-davies",
    "icon": "resources/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Devine-Davies/vs-make-hidden"
    },
    "private": false,
    "bugs": {
        "email": "rhysdevine@gmail.com",
        "url": "https://github.com/Devine-Davies/vs-make-hidden/issues"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*",
        "onView:extension",
        "onCommand:make-hidden.hideItem",
        "onCommand:make-hidden.superHide",
        "onCommand:make-hidden.showOnly",
        "onCommand:make-hidden.removeItem",
        "onCommand:make-hidden.removeAllItems"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "makeHiddenViewPane",
                    "name": "Hidden in Directory"
                }
            ]
        },
        "commands": [
            {
                "command": "make-hidden.hideItem",
                "title": "Hide",
                "category": "Make Hidden"
            },
            {
                "command": "make-hidden.superHide",
                "title": "Super Hide",
                "category": "Make Hidden"
            },
            {
                "command": "make-hidden.showOnly",
                "title": "Show Only",
                "category": "Make Hidden"
            },
            {
                "command": "make-hidden.removeItem",
                "title": "Put Pack",
                "category": "Make Hidden"
            },
            {
                "command": "make-hidden.removeAllItems",
                "title": "Put all Back",
                "category": "Make Hidden"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "make-hidden.hideItem",
                    "group": "make-hidden@1"
                },
                {
                    "command": "make-hidden.superHide",
                    "group": "make-hidden@1"
                },
                {
                    "command": "make-hidden.showOnly",
                    "group": "make-hidden@1"
                }
            ],
            "view/title": [
                {
                    "command": "make-hidden.removeAllItems",
                    "when": "view == makeHiddenViewPane"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "jsonc-parser": "^0.4.2"
    }
}